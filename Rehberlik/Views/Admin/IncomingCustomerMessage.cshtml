@model IEnumerable<Rehberlik.Models.SqlDat.Contact>
@{
    ViewData["Title"] = "IncomingCustomerMessage";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<!doctype html>
<html class="no-js " lang="tr">

<body class="theme-blue">
    <!-- Main Content -->
    <section class="content">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>
                        Gelen Mesajlar
                        <small class="text-muted">Tekrar Hoş Geldiniz</small>
                    </h2>
                </div>

            </div>
        </div>
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="body">
                            <h4> Mesajlar</h4>
                            <table class="table table-bordered">
                                <tr>
                                    <th>
                                        Ad Soyad
                                    </th>
                                    <th>
                                        Müşteri No
                                    </th>
                                    <th>
                                        E posta
                                    </th>
                                    <th>
                                        Mesaj
                                    </th>
                                    <th>
                                        Telefon
                                    </th>
                                    <th>
                                        Tarih
                                    </th>
                                    <th>Sil</th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NameSurname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ContactNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Message)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tel)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EntryDate)
                                        </td>
                                        <td>
                                            <a asp-action="DeleteMeesageList" asp-route-id="@item.Id" class="btn btn-raised btn-info btn-round">Sil</a>

                                        </td>
                                    </tr>
                                }
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>

