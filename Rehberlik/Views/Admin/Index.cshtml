
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_AdminLayout.cshtml";
}


<section class="content home">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>
                    Gösterge Paneli
                    <small class="text-muted">Goşgeldiniz: <b> @ViewBag.ad </b></small>
                </h2>
            </div>

        </div>
    </div>
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="body">
                        <h3 class="number count-to" data-from="0" data-to="128" data-speed="2000" data-fresh-interval="700"> @ViewBag.hizmetler</h3>
                        <p class="text-muted">Hizmetler</p>
                        <div class="progress">
                            <div class="progress-bar l-blue" role="progressbar" aria-valuenow="68" aria-valuemin="0" aria-valuemax="100" style="width: @ViewBag.hizmetler%;"></div>
                        </div>
                        <small>Hizmetler @ViewBag.hizmetler</small>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="body">
                        <h3 class="number count-to" data-from="0" data-to="758" data-speed="2000" data-fresh-interval="700">@ViewBag.makale</h3>
                        <p class="text-muted">Makaleler</p>
                        <div class="progress">
                            <div class="progress-bar l-green" role="progressbar" aria-valuenow="@ViewBag.makale" aria-valuemin="0" aria-valuemax="100" style="width: @ViewBag.makale%;"></div>
                        </div>
                        <small>Makaleler @ViewBag.makale</small>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="body">
                        <h3 class="number count-to" data-from="0" data-to="2521" data-speed="2000" data-fresh-interval="700">@ViewBag.takim</h3>
                        <p class="text-muted">Takım</p>
                        <div class="progress">
                            <div class="progress-bar l-amber" role="progressbar" aria-valuenow="@ViewBag.takim" aria-valuemin="0" aria-valuemax="100" style="width: @ViewBag.takim%;"></div>
                        </div>
                        <small>Takım @ViewBag.takim</small>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="body">
                        <h3 class="number count-to" data-from="0" data-to="2521" data-speed="2000" data-fresh-interval="700">@ViewBag.mesajlar</h3>
                        <p class="text-muted">Gelem Mesajlar</p>
                        <div class="progress">
                            <div class="progress-bar l-amber" role="progressbar" aria-valuenow="@ViewBag.mesajlar" aria-valuemin="0" aria-valuemax="100" style="width: @ViewBag.mesajlar%;"></div>
                        </div>
                        <small>Gelem Mesajlar @ViewBag.mesajlar</small>
                    </div>
                </div>
            </div>



        </div>




    </div>


</section>