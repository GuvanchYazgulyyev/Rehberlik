@model Rehberlik.Models.SqlDat.Contact
@{
    ViewData["Title"] = "MGonderMesaj";
    Layout = "~/Views/_VitrinLayout.cshtml";
}


<div class="section breadcrumb-section">
    <span class="shape shape-one layer" data-speed="1">
        <img src="~/3/assets/images/slider/shape-2.png" alt="Shape">
    </span>
    <span class="shape shape-two layer" data-speed="2">
        <img src="~/3/assets/images/slider/shape-5.png" alt="Shape">
    </span>
    <span class="shape shape-three">
        <img src="~/3/assets/images/slider/shape-7.png" alt="Shape">
    </span>
    <span class="shape shape-four">
        <img src="~/3/assets/images/slider/shape-9.png" alt="Shape">
    </span>
    <span class="shape shape-five">
        <img src="~/3/assets/images/slider/shape-10.png" alt="Shape">
    </span>
    <div class="container">
        <div class="row">
            <div class="col-12 align-items-center text-center">
                <!-- Breadcrumb Wrapper Start -->
                <div class="breadcrumb-wrapper">
                    <h1 class="title">İletişim</h1>
                    <p class="text mb-0">Bizimle İletişime Giçiniz! </p>
                </div>
                <!-- Breadcrumb Wrapper End -->
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- Contact Section Start -->
<div class="section-padding">
    <div class="container">
        <div class="row mb-n30">
            <div class="col-lg-6 mb-30">
                <!-- Section Title Start -->
                <div class="section-title-center section-head contact-head text-start mb-5 wow fadeIn" data-wow-duration="1.5s" data-wow-delay=".1s">
                    <span class="subtitle">İletişim</span>
                    <h2 class="title">Bizimle İletişime Geçiniz!</h2>
                    <p class="text-two mw-100 mb-0">Kaliteli Hizmet İçin İletişime Geçiniz!</p>
                </div>
                <!-- Section Title End  -->
                <!-- Contact Information Start -->
                @await Component.InvokeAsync("ConInformation")
                <!-- Contact Information End -->
            </div>
            <div class="col-lg-6 mb-30">
                <form method="post" asp-action="MGonderMesaj" asp-controller="Main" enctype="multipart/form-data" class="comment-form-inner contact-form wow fadeIn" data-wow-duration="1.5s" data-wow-delay=".1s">
                    <h2 class="title">Mesaj Gönderin</h2>
                    <div class="row">
                        <input name="ContactNo" value="@ViewBag.takipkod" type="hidden" required="" />
                        <div class="col-12 mb-3">
                            <input placeholder="Adınız Soyadınız..." name="NameSurname" required="">
                        </div>
                        <div class="col-12 mb-3">
                            <input type="email" placeholder="E Posta Adresiniz..." name="Email" required="">
                        </div>
                        <div class="col-12 mb-3">
                            <input placeholder="Telefon..." name="Tel" required="">
                        </div>
                        <div class="col-12 mb-3">
                            <textarea name="Message" required"" placeholder="Yorumunuzu buraya yazın..."></textarea>
                        </div>
                        <div class="col-12 text-left">
                            <button class="btn btn-style-one" type="submit"> <span>Gönder</span> </button>
                        </div>
                        <div class="col-12">
                            <!--== Message Notification ==-->
                            <div class="form-message mt-4"></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Contact Section End -->
<!-- Contact Map Section Start -->
<div class="section-margin-bottom">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="contact-map-section wow fadeIn" data-wow-duration="1.5s" data-wow-delay=".1s">
                    <!-- Google Map Area Start -->
                    <div class="google-map-area w-100">
                        <div class="icon">
                            <img src="~/3/assets/images/icons/contact.png" alt="Map-Icon">
                        </div>
                        <div class="map-inner" style="width: 100%">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d391771.367609911!2d32.48257982641939!3d39.90303941891153!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d347d520732db1%3A0xbdc57b0c0842b8d!2sAnkara!5e0!3m2!1str!2str!4v1673124502952!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>
                    <!-- Google Map Area Start -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact Map Section End -->
