@model IEnumerable<Rehberlik.Models.SqlDat.Blog>
@{
    ViewData["Title"] = "Bloglar";
    Layout = "~/Views/_VitrinLayout.cshtml";
}





<div class="section breadcrumb-section">
    <span class="shape shape-one layer" data-speed="1">
        <img src="~/3/assets/images/slider/shape-2.png" alt="Shape">
    </span>
    <span class="shape shape-two layer" data-speed="2">
        <img src="~/3/assets/images/slider/shape-5.png" alt="Shape">
    </span>
    <span class="shape shape-three wow pulse" data-wow-duration="1s" data-wow-delay=".1s">
        <img src="~/3/assets/images/slider/shape-7.png" alt="Shape">
    </span>
    <span class="shape shape-four wow fadeInUp" data-wow-duration="1s" data-wow-delay=".1s">
        <img src="~/3/assets/images/slider/shape-9.png" alt="Shape">
    </span>
    <span class="shape shape-five wow fadeInUp" data-wow-duration="1.5s" data-wow-delay=".1s">
        <img src="~/3/assets/images/slider/shape-10.png" alt="Shape">
    </span>
    <div class="container">
        <div class="row">
            <div class="col-12 align-items-center text-center">
                <div class="breadcrumb-wrapper">
                    <h1 class="title">Haberler</h1>
                    <p class="text mb-0">Güncel Haberlerimiz Burada </p>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Blog Section Start -->
<div class="section-padding">
    <div class="container">
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 row-cols-1 mb-n25">
            @foreach (var item in Model)
            {
                <div class="col mb-30">
                    <!-- Single Blog Start -->
                    <div class="blog wow fadeIn" data-wow-duration="1.5s" data-wow-delay=".1s">
                        <div class="blog-thumbnail">
                            <a href="blog-details.html" class="image">
                                <img src="@item.Image" alt="Blog Image">
                            </a>
                        </div>
                        <div class="blog-info">
                            <ul class="meta">
                                <li>@item.Title</li>
                                <li>@item.EntryDate</li>
                            </ul>
                            <h3 class="title">
                                <a href="blog-details.html">@item.Description.Substring(8,50)</a>
                            </h3>
                        </div>
                    </div>
                    <!-- Single Blog End -->
                </div>
            }
        </div>
        <div class="row">
            <div class="col-12 justify-content-center align-items-center d-flex">
                <nav class="pagination-wrapper wow fadeIn" data-wow-duration="1.5s" data-wow-delay=".1s">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link active" href="#/">1</a></li>
                        <li class="page-item"><a class="page-link" href="#/">2</a></li>
                        <li class="page-item"><a class="page-link" href="#/">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#/" aria-label="Next">
                                <span aria-hidden="true"><i class="fas fa-arrow-right"></i></span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
